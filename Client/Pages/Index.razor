@page "/"

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-xs-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Pseudocode</h5>
                </div>
                <div class="card-body">
                    <p>
                        <input @bind-value="VariableType" @bind-value:event="onchange" placeholder="Variable Type">
                        <input @bind-value="VariableName" @bind-value:event="onchange" placeholder="Variable Name">
                        <input @bind-value="VariableValue" @bind-value:event="onchange" placeholder="Variable Value">
                    </p>
                    <p><button @onclick="@( () => CreateVariable(VariableType, VariableName, VariableValue) )">Create variable</button></p>
                    <p><button @onclick="@( () => cscode.Add("Ask for input") )">Ask for input</button></p>
                    <p><button @onclick="@( () => cscode.Add("Print") )">Print</button></p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xs-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">C# Code</h5>
                </div>
                <div class="card-body">
                    @foreach (var line in cscode)
                    {
                        <p>@line</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Log</h5>
            </div>
            <div class="card-body">
                @foreach (var entry in log)
                {
                    @if (entry.Type == "0")
                    {
                        <p style="text-color: red;">@entry.Text</p>
                    } else {
                        <p>@entry.Text</p>
                    }
                }
            </div>
        </div>
    </div>
</div>

@code {
    public List<string> pseudocode = new List<string>();
    public List<string> cscode = new List<string>();
    public List<LogEntry> log = new List<LogEntry>();

    // Initializing with some parameters/optins
    protected override async Task OnInitializedAsync()
    {
        List<string> VariableTypes = new List<string>
            {
                "Integer - int",
                "Text - string",
                "Boolean - bool",
                "Decimal - double"
            };
    }

    // Generic Methods
    void Set(string variable, string value) => variable = value;        

    // Managing Variables
    public List<Variable> variables = new List<Variable>();

    public string VariableName;
    public string VariableType;
    public string VariableValue;

    void CreateVariable(string type, string name, string value) {
        Variable TempVariable = new Variable(type, name, value);

        // Wrong parameters, won't create, log error
        if (TempVariable.Type == null)
        {
            LogEntry error = new LogEntry("0", "Invalid parameters entered on variable creation");
            log.Add(error);
            return;
        }

        // Preparing log
        LogEntry entry = new LogEntry(TempVariable.Check(TempVariable, variables)[0].ToString(), TempVariable.Check(TempVariable, variables).Remove(0, 2).ToString());
        log.Add(entry);
        
        // If all is valid, add to CSCODE
        if (entry.Type == "1") cscode.Add($"{type} {name} = {value};");
    }
}